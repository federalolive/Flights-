<%- include('../partials/header.ejs') %>

  <h2>Enter a New Flight</h2>

<form action="/flights" method="POST">
<label>Airport:
    <select name="Airport">
        <option value="AUS">AUS</option>
        <option value="DFW" selected>DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SFO">SFO</option>
        <option value="HND">HND</option>
        <option value="NRT">NRT</option>
        <option value="HKG">HKG</option>
        <option value="MNL">MNL</option>
    </select>
</label><br>
<label>Airline:
    <select name="Airline">
        <option value="American Airlines">American Airlines</option>
        <option value="Jet Blue Airways">Jet Blue Airways</option>
        <option value="Southwest">Southwest</option>
        <option value="Delta">Delta</option>
        <option value="Virgin">Virgin</option>
        <option value="United Airlines">United Airlines</option>
        <option value="Philippine Airlines">Philippine Airlines</option>
        <option value="Japan Airlines">Japan Airlines</option>
    </select>
</label></br>
<label>
    flightNo:
    <input type="text": name="flightNo">
</label><br>
<label>Departs:
    <input type="date" name="departs">
</label><br>
<label>

</label>
<label>Departed:
    <input type="checkbox" name="departed" checked>
</label><br>
<input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer.ejs') %> 
</body>
</html>


